{% block header %}{% endblock %}

{% block stylesheets %}
        <link type="text/css" rel="stylesheet" media="all" href="assets/css/forth.css" />
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">     
{% endblock %}
{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="login">
        <div class="form">
            <form method="post" class="login-form">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <span class="material-icons">LOGIN</span>
                <input type="text" value="{{ last_username }}"placeholder="Username" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                <input type="password" name="password" placeholder="Password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-lg btn-primary" type="submit">
                    Submit
                </button>
            </form>  
        </div>
    </div>
{% endblock %}